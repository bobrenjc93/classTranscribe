    <div class="player-container">

        <video id="video"
               class="video-js"
               controls data-setup='{ "playbackRates": [0.5, 1, 1.25, 1.5, 1.75, 2] }'></video>
        <div class="vjs-playlist">
            <!--
              The contents of this element will be filled based on the
              currently loaded playlist
            -->
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col">
                <input type="text" id="search" class="form-control" placeholder="Search here..." />
            </div>
            <div class="col" id="full_course_search_div">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="full_course_search">
                    <label class="form-check-label">Search Entire Course</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="auto_scroll" checked>
                    <label class="form-check-label">Auto Scroll</label>
                    <div class="opt-button-div" id="dwnld-vtt-div"></div>
                </div>
                <!--<label>
                    <input type="checkbox" data-toggle="toggle" id="full_course_search" data-off="Search full course?" data-on="Search current lecture?" data-onstyle="success" data-offstyle="warning" data-height="45px" data-width="220px">
                </label>-->
            </div>
        </div>
    </div>
    <div>
        <div id="live_transcriptions" class="list-group"></div>
    </div>

    <script src="/node_modules/video.js/dist/video.js"></script>
    <script src="/node_modules/videojs-playlist/dist/videojs-playlist.js"></script>
    <script src="/node_modules/videojs-playlist-ui/dist/videojs-playlist-ui.js"></script>
    <script src="https://cdn.sc.gl/videojs-hotkeys/latest/videojs.hotkeys.min.js"></script>
    <script src="/public/javascripts/utils.js"></script>
    <script src="/public/javascripts/controllers/watchLectureVideos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
